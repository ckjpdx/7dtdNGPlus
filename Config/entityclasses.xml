<configs>
<!-- Player -->
	<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='BuffResistance'][@operation='base_set']/@value">.9</set>
	<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='CarryCapacity'][@operation='base_set']/@value">0</set>
	<!-- Stamina loss on hit -->
	<append xpath="/entity_classes/entity_class[@name='playerMale']">
		<effect_group>
			<triggered_effect trigger="onOtherDamagedSelf" action="ModifyStats" stat="Stamina" operation="subtract" value="15"/>
		</effect_group>
	</append>

<!-- Zombies -->
	<!-- zombieWightFeral enhanced -->
	<set xpath="/entity_classes/entity_class[@name='zombieWightFeral']/property[@name='JumpMaxDistance']/@value">13, 15</set>
	<set xpath="/entity_classes/entity_class[@name='zombieWightFeral']/property[@name='MoveSpeedAggro']/@value">1, 2</set>
	<!-- Senses -->
	<set xpath="/entity_classes/entity_class[contains(@name, 'zombie') or contains(@name, 'animal')]/property[@name='SightRange']/@value">100</set>
	<set xpath="/entity_classes/entity_class[contains(@name, 'zombie') and not(contains(@name, 'animal'))]/property[@name='MaxViewAngle']/@value">23</set>
	<set xpath="/entity_classes/entity_class[contains(@name, 'zombie') or contains(@name, 'animal')]/property[@name='SightLightThreshold']/@value">1,100</set>
	<set xpath="/entity_classes/entity_class[contains(@name, 'zombie') and not(contains(@name, 'animal'))]/property[@name='SmellAlertThreshold']/@value">999</set>
	<!-- Motion -->
	<set xpath="/entity_classes/entity_class/property[@name='HasDeathAnim']/@value">false</set>
	<set xpath="/entity_classes/entity_class[contains(@name, 'zombieTemplateMale') or contains(@name, 'zombieWightRadiated')]/property[@name='KnockdownKneelDamageThreshold']/@value">0.33</set>
	<set xpath="/entity_classes/entity_class/property[@name='KnockdownKneelStunDuration']/@value">1,3</set>
	<set xpath="/entity_classes/entity_class[contains(@name, 'zombieTemplateMale') or contains(@name, 'zombieWightRadiated')]/property[@name='KnockdownProneDamageThreshold']/@value">0.75</set>
	<set xpath="/entity_classes/entity_class/property[@name='KnockdownProneStunDuration']/@value">1,15</set>
	<!-- Sound -->
	<remove xpath="/entity_classes/entity_class[not(contains(@name, 'player'))]/property[@name='SoundDeath']"/>

	<!-- Duriel's Random Zombie HP (modified) -->
		<!--========== Adding tag to separate zombie tiers and be able to add random HP based on tiers ==========-->

		<append xpath="/entity_classes/entity_class[not(contains(@name, 'Screamer'))]/property[@name='Tags' and contains(@value, 'walker') and not(contains(@value, 'feral')) and not(contains(@value, 'radiated'))]/@value">,slow</append>
		<append xpath="/entity_classes/entity_class[not(contains(@name, 'Screamer'))]/property[@name='Tags' and contains(@value, 'feral') and not(contains(@value, 'radiated'))]/@value">,fast</append>
		<append xpath="/entity_classes/entity_class[not(contains(@name, 'Screamer'))]/property[@name='Tags' and contains(@value, 'radiated') and not(contains(@value, 'vulture'))]/@value">,green</append>
		
		<!--========== Tier 1 Walker Zombies definition ==========-->
		
		<append xpath="/entity_classes/entity_class[contains (@name, 'zombie')]">
			<effect_group name="one">
				<passive_effect name="HealthMax" operation="base_add" value="100">
					<requirement name="EntityTagCompare" target="self" tags="slow"/>
					<requirement name="RandomRoll" seed_type="Item" min_max="1,20" operation="GTE" value="10"/>
				</passive_effect>
			</effect_group>
		</append>
		<append xpath="/entity_classes/entity_class[contains (@name, 'zombie')]">
			<effect_group name="two">
				<passive_effect name="HealthMax" operation="base_add" value="100">
					<requirement name="EntityTagCompare" target="self" tags="slow"/>
					<requirement name="RandomRoll" seed_type="Item" min_max="1,30" operation="GTE" value="15"/>
				</passive_effect>
			</effect_group>
		</append>
		
		<!--========== Tier 2 Feral Zombies definition ==========-->
		
		<append xpath="/entity_classes/entity_class[contains (@name, 'zombie')]">
			<effect_group name="one">
				<passive_effect name="HealthMax" operation="base_add" value="-100">
					<requirement name="EntityTagCompare" target="self" tags="fast"/>
					<requirement name="RandomRoll" seed_type="Item" min_max="1,20" operation="GTE" value="10"/>
				</passive_effect>
			</effect_group>
		</append>
		<append xpath="/entity_classes/entity_class[contains (@name, 'zombie')]">
			<effect_group name="two">
				<passive_effect name="HealthMax" operation="base_add" value="100">
					<requirement name="EntityTagCompare" target="self" tags="fast"/>
					<requirement name="RandomRoll" seed_type="Item" min_max="1,30" operation="GTE" value="15"/>
				</passive_effect>
			</effect_group>
		</append>
		
		<!--========== Tier 3 Radiated Zombies definition ==========-->
		
		<append xpath="/entity_classes/entity_class[contains (@name, 'zombie')]">
			<effect_group name="one">
				<passive_effect name="HealthMax" operation="base_add" value="-100">
					<requirement name="EntityTagCompare" target="self" tags="green"/>
					<requirement name="RandomRoll" seed_type="Item" min_max="1,20" operation="GTE" value="10"/>
				</passive_effect>
			</effect_group>
		</append>
		<append xpath="/entity_classes/entity_class[contains (@name, 'zombie')]">
			<effect_group name="two">
				<passive_effect name="HealthMax" operation="base_add" value="-100">
					<requirement name="EntityTagCompare" target="self" tags="green"/>
					<requirement name="RandomRoll" seed_type="Item" min_max="1,30" operation="GTE" value="15"/>
				</passive_effect>
			</effect_group>
		</append>

<!-- Animals -->
	<append xpath="/entity_classes/entity_class[@name='animalChicken']">
		<drop event="Harvest" name="foodEgg" tag="butcherHarvest" count="3"/>
	</append>

</configs>