<configs>
<!-- WEAPONS / TOOLS -->
  <!-- Reduce creation cost increase with quality -->
  <set xpath="/recipes/recipe[not(contains(@name, 'Bot')) and contains(@name, 'gun') or contains(@name, 'melee') or contains(@name, 'armor')]/effect_group/passive_effect[@name='CraftingIngredientCount']/@level">1,6</set>
  <set xpath="/recipes/recipe[not(contains(@name, 'Bot')) and contains(@name, 'gun') or contains(@name, 'melee') or contains(@name, 'armor')]/effect_group/passive_effect[@name='CraftingIngredientCount']/@value">0.5,0.5</set>

<!-- FOOD -->
  <!-- foodRawMeat recipes require less meat because its heavier -->
  <set xpath="/recipes/recipe[@name='foodCharredMeat']/ingredient[@name='foodRawMeat']/@count">3</set>
  <set xpath="/recipes/recipe[@name='foodGrilledMeat']/ingredient[@name='foodRawMeat']/@count">3</set>
  <set xpath="/recipes/recipe[@name='foodBoiledMeat']/ingredient[@name='foodRawMeat']/@count">3</set>
  <set xpath="/recipes/recipe[@name='foodBaconAndEggs']/ingredient[@name='foodRawMeat']/@count">3</set>
  <set xpath="/recipes/recipe[@name='foodMeatStew']/ingredient[@name='foodRawMeat']/@count">3</set>
  <set xpath="/recipes/recipe[@name='foodSteakAndPotato']/ingredient[@name='foodRawMeat']/@count">3</set>
  <set xpath="/recipes/recipe[@name='foodChiliDog']/ingredient[@name='foodRawMeat']/@count">3</set>
  <!-- foodRottingFlesh require less also -->
  <set xpath="/recipes/recipe[@name='foodHoboStew']/ingredient[@name='foodRottingFlesh']/@count">5</set>
  <set xpath="/recipes/recipe[@name='foodCanSham']/ingredient[@name='foodRottingFlesh']/@count">3</set>
  <!-- Ingredient rebalance -->
  <set xpath="/recipes/recipe[@name='plantedCorn1']/ingredient[@name='foodCropCorn']/@count">2</set>
  <set xpath="/recipes/recipe[@name='plantedPotato1']/ingredient[@name='foodCropPotato']/@count">2</set>
  <append xpath="/recipes/recipe[@name='plantedCorn1']">
  	<effect_group>
		  <passive_effect name="CraftingIngredientCount" level="3" operation="base_add" value="-1" tags="foodCropCorn"/>
	  </effect_group>
  </append>

  <!-- Alternative Recipes -->
  <append xpath="/recipes">
    <recipe name="drinkJarRiverWater" count="1" always_unlocked="true" craft_area="campfire">
      <ingredient name="resourceClayLump" count="1"/>
      <ingredient name="drinkJarBoiledWater" count="1"/>
    </recipe>
    <recipe name="resourceAnimalFat" count="1" craft_area="campfire" craft_tool="toolCookingGrill" tags="perkMasterChef">
      <ingredient name="foodRawMeat" count="1"/>
    </recipe>
    <!-- new recipes -->
    <recipe name="foodBerserkerPorridge" count="1"  craft_time="65" craft_area="campfire" craft_tool="toolCookingPot" tags="perkMasterChef,learnable">
      <ingredient name="foodRottingFlesh" count="10"/>
      <ingredient name="drugSteroids" count="1"/>
      <ingredient name="resourceCropChrysanthemumPlant" count="10"/>
      <ingredient name="drinkJarBoiledWater" count="1"/>
    </recipe>
    <recipe name="drugBlunt" count="1" craft_time="20" tags="perkPhysician">
      <ingredient name="resourceCropGoldenrodPlant" count="4"/>
    	<ingredient name="resourceYuccaFibers" count="1"/>
      <effect_group>
        <passive_effect name="CraftingIngredientCount" level="3,4" operation="base_add" value="-1" tags="resourceCropGoldenrodPlant"/>
      </effect_group>
    </recipe>
  </append>
</configs>
