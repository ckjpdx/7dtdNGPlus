<configs>
<!-- faster progression early game, slower mid to late game -->
  <set xpath="/progression/level/@exp_to_level">5000</set>
  <set xpath="/progression/level/@experience_multiplier">1.1</set>
  <set xpath="/progression/level/@skill_points_per_level">3</set>
  <set xpath="/progression/level/@clamp_exp_cost_at_level">38</set>
    
  <set xpath="/progression/perks/@cost_multiplier_per_level">1.33</set>

<!-- remove head damage from base attributes -->
  <set xpath="/progression/attributes/attribute[contains(@name, 'att')]/effect_group/passive_effect[@name='DamageModifier']/@value">0,0</set>
  <set xpath="/progression/attributes/attribute[contains(@name, 'att')]/effect_group/passive_effect[@name='DismemberChance']/@value">0.25,0.75</set>

<!-- added recipe levels -->
  <append xpath="/progression/perks/perk[@name='perkMasterChef']/effect_group/passive_effect[@name='RecipeTagUnlocked'][@level='2,5']/@tags">,resourceAnimalFat</append>

<!-- stealth improvements to counter zed sight increase -->
  <set xpath="/progression/perks/perk[@name='perkFromTheShadows']/effect_group/passive_effect[@name='LightMultiplier']/@value">-0.4,-0.9</set>
  <set xpath="/progression/perks/perk[@name='perkFromTheShadows']/effect_group/passive_effect[@name='NoiseMultiplier']/@value">-0.4,-0.9</set>
  <set xpath="/progression/perks/perk[@name='perkHiddenStrike']/effect_group/passive_effect[@name='EntityDamage']/@value">0.5,2,3,4,5,6</set>

</configs>